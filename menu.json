</div>

<script>
(function(){
  const qs = s => document.querySelector(s);
  const qsa = s => Array.from(document.querySelectorAll(s));
  const sections = qsa('.section');
  const tabs = qsa('.tab');
  const searchInput = qs('#search');
  const vegBtn = qs('#vegOnly');
  const nonVegBtn = qs('#nonVegOnly');
  const announce = qs('#announce');

  // Helpers
  const showSection = id => {
    sections.forEach(sec => sec.classList.toggle('hidden', sec.id !== id));
    tabs.forEach(t => t.classList.toggle('active', t.dataset.target === id));
    setURLState({section:id});
  };

  const setURLState = (state) => {
    const url = new URL(window.location);
    Object.entries(state).forEach(([k,v]) => {
      if (v === null || v === undefined) url.searchParams.delete(k);
      else url.searchParams.set(k, v);
    });
    history.replaceState(null, '', url);
  };

  const applyURLState = () => {
    const url = new URL(window.location);
    const section = url.searchParams.get('section');
    const q = url.searchParams.get('q');
    const filter = url.searchParams.get('filter'); // veg|nonveg|null

    if (section && qs('#'+section)) showSection(section);
    if (q) { searchInput.value = q; applySearch(q); }
    if (filter === 'veg') applyFilter('veg');
    else if (filter === 'nonveg') applyFilter('nonveg');
    else clearFilter();
  };

  // Tabs
  tabs.forEach(t => t.addEventListener('click', () => showSection(t.dataset.target)));

  // Search
  function applySearch(term){
    const needle = term.trim().toLowerCase();
    qsa('.card').forEach(card => {
      const name = card.querySelector('.name').textContent.toLowerCase();
      const tags = (card.getAttribute('data-tags')||'').toLowerCase();
      const match = name.includes(needle) || tags.includes(needle);
      card.style.display = match ? '' : 'none';
    });
    setURLState({q: term || null});
  }
  searchInput.addEventListener('input', e => applySearch(e.target.value));

  // Filters
  let currentFilter = null;
  function applyFilter(kind){
    currentFilter = kind;
    qsa('.card').forEach(card => {
      const isVeg = !!card.querySelector('.badge.veg');
      const isNonVeg = !!card.querySelector('.badge.nonveg');
      const show = (kind === 'veg' && isVeg) || (kind === 'nonveg' && isNonVeg);
      card.style.display = show ? '' : 'none';
    });
    setURLState({filter:kind});
  }
  function clearFilter(){
    currentFilter = null;
    qsa('.card').forEach(card => card.style.display = '');
    setURLState({filter:null});
  }
  vegBtn.addEventListener('click', () => applyFilter('veg'));
  nonVegBtn.addEventListener('click', () => applyFilter('nonveg'));

  // Announcement
  function setAnnouncement(text){
    if (!text) { announce.classList.remove('show'); announce.textContent=''; return; }
    announce.textContent = text;
    announce.classList.add('show');
  }

  // Price update by dish name (exact match)
  function updatePriceByName(nameBn, newPrice){
    qsa('.card').forEach(card => {
      const nm = card.querySelector('.name')?.textContent.trim();
      if (nm === nameBn) {
        const priceEl = card.querySelector('.price');
        priceEl.textContent = newPrice;
      }
    });
  }

  // Remote control via BroadcastChannel
  const channel = new BroadcastChannel('vr-control');
  channel.onmessage = (ev) => {
    const msg = ev.data || {};
    switch(msg.type){
      case 'show-section': if (msg.id && qs('#'+msg.id)) showSection(msg.id); break;
      case 'search': applySearch(msg.term||''); break;
      case 'filter': if (msg.kind) applyFilter(msg.kind); else clearFilter(); break;
      case 'announce': setAnnouncement(msg.text||''); break;
      case 'update-price': updatePriceByName(msg.name, msg.price); break;
      case 'hide-item':
        qsa('.card').forEach(card => {
          const nm = card.querySelector('.name')?.textContent.trim();
          if (nm === msg.name) card.style.display = 'none';
        });
        break;
      case 'show-item':
        qsa('.card').forEach(card => {
          const nm = card.querySelector('.name')?.textContent.trim();
          if (nm === msg.name) card.style.display = '';
        });
        break;
    }
  };

  // Initial state from URL
  applyURLState();

  // Fallback: default to first visible section if none selected
  if (!new URL(window.location).searchParams.get('section')) showSection('snacks');
})();
</script>
</body>
